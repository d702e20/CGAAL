// Rock-Paper-Scissors

player p1 = rsplayer[INDEX=0];
player p2 = rsplayer[INDEX=1];

winner : [-1..1] init -1;
winner' = (p1.paper && p2.scissors) || (p1.scissors && p2.rock) || (p1.rock && p2.paper);

template rsplayer

    label wins = winner == INDEX;

    [rock] 1;
    [paper] 1;
    [scissors] 1;
endtemplate
